rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow access to the 'events' folder
    match /events/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Fallback for other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
